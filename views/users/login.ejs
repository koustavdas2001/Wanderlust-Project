<% layout("/layouts/boilerPlate.ejs") %>
<div class="row mt-3">
    <h1 class="col-lg-6 col-md-8 col-sm-10 offset-lg-3 offset-md-2 offset-sm-1">Login</h1>
    <div class="col-lg-6 col-md-8 col-sm-10 offset-lg-3 offset-md-2 offset-sm-1 mt-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input name="username" id="username" type="text" class="form-control" required>
            <div class="invalid-feedback">Please provide a proper Username.</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password" id="password" type="password" class="form-control" required>
        </div>
        <button class="btn btn-success">Login</button>
    </form>
    </div>
</div>